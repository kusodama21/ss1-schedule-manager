mixin appointCreate(teachers, classes, rooms, msg)
    div
        h1 Appoint Create Mixins

        if msg
            p Message: #{msg}

        form(action='/admin/appoint/create' method='POST')

            label(for='teachers') Teacher: 
            select(name='teacherId')
                for teacher in teachers
                    option(value=teacher.id) #{teacher.name} - ID: #{teacher.id}
            br

            label(for='classes') Class: 
            select(name='classId')
                for Class in classes
                    option(value=Class.id) #{Class.name}
            br

            label(for='rooms') Rooms: 
            select(name='roomId')
                for room in rooms
                    option(value=room.id) #{room.name}
            br

            label(for='start') Start at: 
            input(type='time' name='start')
            br

            label(for='end') End at: 
            input(type='time' name='end')
            br

            label(for='date') Date: 
            input(type='date' name='date')
            br

            input(type='submit' value='Submit')
            br